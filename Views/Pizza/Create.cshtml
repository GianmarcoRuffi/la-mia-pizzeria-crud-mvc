@using la_mia_pizzeria_static.Models.Form
@model PizzaForm

<div class="container">
    <h1>Crea la tua Pizza:</h1>
    <form method="post" asp-controller="Pizza" asp-action="Create">
@Html.AntiForgeryToken()
<div class="mb-3">
<strong>Nome della pizza:</strong>
<input asp-for="Pizza.Name" class="d-block w-100" />
<span asp-validation-for="Pizza.Name" class="text-danger"></span>
</div>
<div class="mb-3">
<strong>Descrizione:</strong>
<input asp-for="Pizza.Description" class="d-block w-100" />
<span asp-validation-for="Pizza.Description" class="text-danger"></span>
</div>
        <div class="mb-3">
            <strong>Categoria:</strong>
            <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">
                @foreach (Category category in Model.Categories)
                {
                    @if (Model.Pizza.CategoryId == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <strong>Immagine (inserire il link all'immagine):</strong>
            <input asp-for="Pizza.Image" class="d-block w-100" />
            <span asp-validation-for="Pizza.Image" class="text-danger"></span>
        </div>
<div class="mb-3">
<strong>Prezzo:</strong>
<input asp-for="Pizza.Prezzo" class="d-block w-100" />
<span asp-validation-for="Pizza.Prezzo" class="text-danger"></span>
</div>
<div class="text-end">
<input type="submit" class="btn btn-small btn-info" value="Salva">
</div>
</form>
</div>